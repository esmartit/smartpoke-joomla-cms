<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_spsensor/models/rules"
	addfieldpath="/administrator/components/com_spsensor/models/fields"
>
	<fieldset name="details">
        <!-- Default Fields.-->
        <!-- Id Field. Type: Text (joomla)-->
        <field name="id"
               type="hidden"
               class="readonly"
               readonly="true"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               size="10"
               default="0" />
        <!-- Published Field. Type: List (joomla)-->
        <field name="published"
               type="hidden"
               class="readonly form-control"
               readonly="true"
               default="1"
               label="JSTATUS">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <!-- Dynamic Fields.-->
        <!-- Spot Field. Type: Sql. (joomla)-->
        <field type="sql"
               name="spot"
               label="COM_SPSENSOR_SENSOR_SPOT_LABEL"
               query="SELECT spot_id, name AS spot FROM #__spspot_spot
 WHERE published = 1"
               default=""
               class="form-control"
               required="true"
               key_field="spot_id"
               value_field="spot"
               translate="true" />
        <!-- Sensor_id Field. Type: Text. (joomla)-->
        <field type="text"
               name="sensor_id"
               label="COM_SPSENSOR_SENSOR_SENSOR_ID_LABEL"
               size="40"
               maxlength="50"
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="true"
               filter="STRING"
               message="COM_SPSENSOR_SENSOR_SENSOR_ID_MESSAGE"
               hint="COM_SPSENSOR_SENSOR_SENSOR_ID_HINT" />
        <!-- Location Field. Type: Text. (joomla)-->
        <field type="text"
               name="location"
               label="COM_SPSENSOR_SENSOR_LOCATION_LABEL"
               size="40"
               maxlength="150"
               default=""
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="false"
               filter="STRING"
               message="COM_SPSENSOR_SENSOR_LOCATION_MESSAGE"
               hint="COM_SPSENSOR_SENSOR_LOCATION_HINT"
               autocomplete="on" />
        <!-- Pwr_in Field. Type: Text. (joomla)-->
        <field type="text"
               name="pwr_in"
               label="COM_SPSENSOR_SENSOR_PWR_IN_LABEL"
               size="10"
               maxlength="150"
               default="-35"
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="false"
               filter="STRING"
               message="COM_SPSENSOR_SENSOR_PWR_IN_MESSAGE"
               hint="COM_SPSENSOR_SENSOR_PWR_IN_HINT"
               autocomplete="on" />
        <!-- Pwr_limit Field. Type: Text. (joomla)-->
        <field type="text"
               name="pwr_limit"
               label="COM_SPSENSOR_SENSOR_PWR_LIMIT_LABEL"
               size="10"
               maxlength="150"
               default="-43"
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="false"
               filter="STRING"
               message="COM_SPSENSOR_SENSOR_PWR_LIMIT_MESSAGE"
               hint="COM_SPSENSOR_SENSOR_PWR_LIMIT_HINT"
               autocomplete="on" />
        <!-- Pwr_out Field. Type: Text. (joomla)-->
        <field type="text"
               name="pwr_out"
               label="COM_SPSENSOR_SENSOR_PWR_OUT_LABEL"
               size="10"
               maxlength="150"
               default="-52"
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="false"
               filter="STRING"
               message="COM_SPSENSOR_SENSOR_PWR_OUT_MESSAGE"
               hint="COM_SPSENSOR_SENSOR_PWR_OUT_HINT"
               autocomplete="on" />
        <!-- Zone Field. Type: Sql. (joomla)-->
        <field type="sql"
               name="zone"
               label="COM_SPSENSOR_SENSOR_ZONE_LABEL"
               query="SELECT id, name AS zone FROM #__spzone_zone
 WHERE published = 1"
               default=""
               class="form-control"
               required="true"
               key_field="id"
               value_field="zone"
               translate="true" />
        <!-- Alias Field. Type: Text. (joomla)-->
        <field type="hidden"
               name="alias"
               label="COM_SPSENSOR_SENSOR_ALIAS_LABEL"
               description="JFIELD_ALIAS_DESC"
               filter="STRING"
               hint="COM_SPSENSOR_SENSOR_ALIAS_HINT" />
    </fieldset>
</form>