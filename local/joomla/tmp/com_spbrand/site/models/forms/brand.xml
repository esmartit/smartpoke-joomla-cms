<?xml version="1.0" encoding="utf-8"?>
<form
        addrulepath="/administrator/components/com_spbrand/models/rules"
        addfieldpath="/administrator/components/com_spbrand/models/fields"
>
    <fieldset name="details">
        <!-- Default Fields.-->
        <!-- Id Field. Type: Text (joomla)-->
        <field name="id"
               type="hidden"
               class="readonly form-control"
               readonly="true"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               size="10"
               default="0" />
        <!-- Published Field. Type: List (joomla)-->
        <field name="published"
               type="hidden"
               class="form-control"
               readonly="true"
               default="1"
               label="JSTATUS">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <!-- Dynamic Fields.-->
        <!-- Name Field. Type: Text. (joomla)-->
        <field type="text"
               name="name"
               label="COM_SPBRAND_BRAND"
               size="40"
               maxlength="150"
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="true"
               filter="STRING"
               message="COM_SPBRAND_BRAND_NAME_MESSAGE"
               hint="COM_SPBRAND_BRAND_NAME_HINT" />
        <!-- Alias Field. Type: Text. (joomla)-->
        <field type="hidden"
               name="alias"
               label="COM_SPBRAND_BRAND_ALIAS_LABEL"
               description="JFIELD_ALIAS_DESC"
               filter="STRING"
               hint="COM_SPBRAND_BRAND_ALIAS_HINT" />
    </fieldset>
</form>