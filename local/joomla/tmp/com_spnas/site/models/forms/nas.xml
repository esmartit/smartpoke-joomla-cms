<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_spnas/models/rules"
	addfieldpath="/administrator/components/com_spnas/models/fields"
>
	<fieldset name="details">
        <!-- Default Fields.-->
        <!-- Id Field. Type: Text (joomla)-->
        <field name="id"
               type="text"
               class="readonly"
               readonly="true"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               size="10"
               default="0" />
        <!-- Dynamic Fields.-->
        <!-- Shortname Field. Type: Text. (joomla)-->
        <field type="text"
               name="shortName"
               label="Short Name"
               size="40"
               maxlength="32"
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="true"
               filter="STRING"
               message="COM_SPNAS_NAS_SHORTNAME_MESSAGE"
               hint="COM_SPNAS_NAS_SHORTNAME_HINT" />
        <!-- Type Field. Type: List. (joomla)-->
        <field type="list"
               name="type"
               label="COM_SPNAS_NAS_TYPE_LABEL"
               class="list_class form-control"
               multiple="false"
               useglobal="false"
               default="0">
            <!-- Option Set.-->
            <option value="Meraki">COM_SPNAS_NAS_MERAKI</option>
            <option value="Huawei">COM_SPNAS_NAS_HUAWEI</option>
            <option value="Ignite">COM_SPNAS_NAS_IGNITE</option>
            <option value="Galgus">COM_SPNAS_NAS_GALGUS</option>
            <option value="Ubiquiti">COM_SPNAS_NAS_UBIQUITI</option>
            <option value="Aruba">COM_SPNAS_NAS_ARUBA</option>
            <option value="Ruckus">COM_SPNAS_NAS_RUCKUS</option>
            <option value="Mikrotik">COM_SPNAS_NAS_MIKROTIK</option>
            <option value="Other">COM_SPNAS_NAS_OTHER</option>
        </field>
        <!-- Server Field. Type: Text. (joomla)-->
        <field type="text"
               name="server"
               label="COM_SPNAS_NAS_SERVER_LABEL"
               size="40"
               maxlength="60"
               default=""
               class="text_area form-control"
               readonly="false"
               disabled="false"
               filter="STRING"
               message="COM_SPNAS_NAS_SERVER_MESSAGE"
               hint="COM_SPNAS_NAS_SERVER_HINT" />
        <!-- Community Field. Type: Text. (joomla)-->
        <field type="text"
               name="community"
               label="COM_SPNAS_NAS_COMMUNITY_LABEL"
               size="40"
               maxlength="50"
               default=""
               class="text_area form-control"
               readonly="false"
               disabled="false"
               filter="STRING"
               message="COM_SPNAS_NAS_COMMUNITY_MESSAGE"
               hint="COM_SPNAS_NAS_COMMUNITY_HINT" />
        <!-- Nasname Field. Type: Text. (joomla)-->
        <field type="text"
               name="name"
               label="Nas Name"
               size="40"
               maxlength="128"
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="true"
               filter="STRING"
               message="COM_SPNAS_NAS_NASNAME_MESSAGE"
               hint="COM_SPNAS_NAS_NASNAME_HINT" />
        <!-- Ports Field. Type: Text. (joomla)-->
        <field type="text"
               name="ports"
               label="COM_SPNAS_NAS_PORTS_LABEL"
               size="40"
               maxlength="7"
               default="0"
               class="text_area fomr-control"
               readonly="false"
               disabled="false"
               filter="INT"
               message="COM_SPNAS_NAS_PORTS_MESSAGE"
               hint="COM_SPNAS_NAS_PORTS_HINT" />
        <!-- Description Field. Type: Textarea. (joomla)-->
        <field type="textarea"
               name="description"
               label="COM_SPNAS_NAS_DESCRIPTION_LABEL"
               rows="11"
               cols="10"
               class="text_area span12 form-control"
               filter="HTML"
               hint="COM_SPNAS_NAS_DESCRIPTION_HINT" />
        <!-- Secret Field. Type: Password. (joomla)-->
        <field type="password"
               name="secret"
               label="Secret"
               size="40"
               default="3Sm4rt1T"
               message="Error! Please add secret here."
               class="text_area"
               readonly="false"
               disabled="false"
               required="true"
               filter="STRING"
               hint="Secret Here"
               autocomplete="off" />
    </fieldset>
</form>