<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 3.1//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/3.1/template-install.dtd">
<extension version="3" type="template" client="site" method="upgrade">
	<name>SmartPokeX</name>
	<version>1.0.0</version>
	<creationDate>2020-04-29</creationDate>
	<author>Adolfo Zignago</author>
	<authorEmail>tech@esmartit.es</authorEmail>
	<authorUrl>https://www.esmartit.es</authorUrl>
	<copyright>Copyright Â© 2020 SmartPoke power by Gentelella. All rights reserved.</copyright>
	<description><![CDATA[
		<h1>SmartPoke | FrontEnd</h1>
		<p>Created by <a href="https://www.esmartit.es" target="_blank">eSmartIT | esmartit.es</a>.</p>
	]]></description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
    	<filename>gulpfile.js</filename>
		<filename>logic.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<folder>build</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>vendors</folder>
	</files>
	<positions>
		<position>debug</position>
		<position>search</position>
		<position>navbar</position>
		<position>breadcrumbs</position>
		<position>topcenter</position>
		<position>right</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_smartpokex.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_smartpokex.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field
						name="logoFile"
						type="media"
						label="TPL_SMARTPOKEX_LOGO_LABEL"
						description="TPL_SMARTPOKEX_LOGO_DESC"
						class=""
						default=""
				/>

				<field
						name="sitetitle"
						type="text"
						label="JGLOBAL_TITLE"
						description="JFIELD_ALT_PAGE_TITLE_LABEL"
						default=""
						filter="string"
				/>

				<field
						name="sitedescription"
						type="text"
						label="JGLOBAL_DESCRIPTION"
						description="JGLOBAL_SUBHEADING_DESC"
						default=""
						filter="string"
				/>

				<field
						name="googleFont"
						type="radio"
						label="TPL_SMARTPOKEX_FONT_LABEL"
						description="TPL_SMARTPOKEX_FONT_DESC"
						class="btn-group btn-group-yesno"
						default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
						name="googleFontName"
						type="text"
						label="TPL_SMARTPOKEX_FONT_NAME_LABEL"
						description="TPL_SMARTPOKEX_FONT_NAME_DESC"
						class=""
						default="Ubuntu"
						showon="googleFont:1"
				/>

			</fieldset>
		</fields>
	</config>
</extension>
