<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2" method="upgrade">
	<name>COM_SPCUSTOMER</name>
	<creationDate>5th June, 2020</creationDate>
	<author>Adolfo Zignago</author>
	<authorEmail>adolfo.zignago@esmartit.es</authorEmail>
	<authorUrl>https://esmartit.es</authorUrl>
	<copyright>Copyright (C) 2020. All Rights Reserved</copyright>
	<license>GNU/GPL Version 2 or later - http://www.gnu.org/licenses/gpl-2.0.html</license>
	<version>1.0.0</version>
	<description><![CDATA[
		<h1>SP Customer (v.1.0.0)</h1>
		<div style="clear: both;"></div>
		<p></p>
		<p>Created by <a href="https://esmartit.es" target="_blank">Adolfo Zignago</a><br /><small>Development started 24th April, 2020</small></p>
	]]></description>

	<!-- Runs on install; New in Joomla 1.5 -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<!-- Runs on uninstall; New in Joomla 1.5 -->
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<!-- Runs on install/uninstall/update; New in Joomla 2.5 -->
	<scriptfile>script.php</scriptfile>

	<media destination="com_spcustomer" folder="media">
		<filename>index.html</filename>
		<folder>js</folder>
		<folder>css</folder>
		<folder>images</folder>
	</media>

	<!-- Update Schema; New in Joomla 2.5 -->
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql/</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>router.php</filename>
		<filename>spcustomer.php</filename>
		<filename>router.php</filename>
		<folder>assets</folder>
		<folder>helpers</folder>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
		<folder>layouts</folder>
	</files>

	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_spcustomer.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.com_spcustomer.sys.ini</language>
	</languages>

	<administration>
		<menu>COM_SPCUSTOMER_MENU</menu>
		<submenu>
			<!-- Instead of link you can specify individual link attributes -->
			<menu option="com_spcustomer" view="customers">COM_SPCUSTOMER_MENU_CUSTOMERS</menu>
		</submenu>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>spcustomer.php</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>layouts</folder>
		</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_spcustomer.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_spcustomer.sys.ini</language>
		</languages>

	</administration>
</extension>