<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_spcustomer/models/rules"
	addfieldpath="/administrator/components/com_spcustomer/models/fields"
>
	<fieldset name="details">
                <!-- Default Fields.-->
                <!-- Id Field. Type: Text (joomla)-->
                <field name="id"
                       type="text"
                       class="readonly"
                       readonly="true"
                       label="JGLOBAL_FIELD_ID_LABEL"
                       description="JGLOBAL_FIELD_ID_DESC"
                       size="10"
                       default="0" />
                <!-- Date Created Field. Type: Calendar (joomla)-->
                <field name="created"
                       type="calendar"
                       label="COM_SPCUSTOMER_CUSTOMER_CREATED_DATE_LABEL"
                       description="COM_SPCUSTOMER_CUSTOMER_CREATED_DATE_DESC"
                       size="22"
                       format="%Y-%m-%d %H:%M:%S"
                       filter="user_utc" />
                <!-- User Created Field. Type: User (joomla)-->
                <field name="created_by"
                       type="user"
                       label="COM_SPCUSTOMER_CUSTOMER_CREATED_BY_LABEL"
                       description="COM_SPCUSTOMER_CUSTOMER_CREATED_BY_DESC" />
                <!-- Published Field. Type: List (joomla)-->
                <field name="published"
                       type="list"
                       label="JSTATUS">
                        <option value="1">JPUBLISHED</option>
                        <option value="0">JUNPUBLISHED</option>
                        <option value="2">JARCHIVED</option>
                        <option value="-2">JTRASHED</option>
                </field>
                <!-- Date Modified Field. Type: Calendar (joomla)-->
                <field name="modified"
                       type="calendar"
                       class="readonly"
                       label="COM_SPCUSTOMER_CUSTOMER_MODIFIED_DATE_LABEL"
                       description="COM_SPCUSTOMER_CUSTOMER_MODIFIED_DATE_DESC"
                       size="22"
                       readonly="true"
                       format="%Y-%m-%d %H:%M:%S"
                       filter="user_utc" />
                <!-- User Modified Field. Type: User (joomla)-->
                <field name="modified_by"
                       type="user"
                       label="COM_SPCUSTOMER_CUSTOMER_MODIFIED_BY_LABEL"
                       description="COM_SPCUSTOMER_CUSTOMER_MODIFIED_BY_DESC"
                       class="readonly"
                       readonly="true"
                       filter="unset" />
                <!-- Access Field. Type: Accesslevel (joomla)-->
                <field name="access"
                       type="accesslevel"
                       label="JFIELD_ACCESS_LABEL"
                       description="JFIELD_ACCESS_DESC"
                       default="1"
                       required="false" />
                <!-- Ordering Field. Type: Numbers (joomla)-->
                <field name="ordering"
                       type="number"
                       class="inputbox validate-ordering"
                       label="COM_SPCUSTOMER_CUSTOMER_ORDERING_LABEL"
                       description=""
                       default="0"
                       size="6"
                       required="false" />
                <!-- Version Field. Type: Text (joomla)-->
                <field name="version"
                       type="text"
                       class="readonly"
                       label="COM_SPCUSTOMER_CUSTOMER_VERSION_LABEL"
                       description="COM_SPCUSTOMER_CUSTOMER_VERSION_DESC"
                       size="6"
                       readonly="true"
                       filter="unset" />
                <!-- Dynamic Fields.-->
                <!-- Spot Field. Type: Sql. (joomla)-->
                <field type="sql"
                       name="spot"
                       label="COM_SPCUSTOMER_CUSTOMER_SPOT_LABEL"
                       query="SELECT spot_id, name AS spot FROM #__spspot_spot WHERE published = 1"
                       default=""
                       required="true"
                       key_field="spot_id"
                       value_field="spot"
                       translate="true" />
                <!-- Username Field. Type: Text. (joomla)-->
                <field type="text"
                       name="username"
                       label="COM_SPCUSTOMER_CUSTOMER_USERNAME_LABEL"
                       size="40"
                       maxlength="150"
                       description="COM_SPCUSTOMER_CUSTOMER_USERNAME_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="true"
                       filter="STRING"
                       message="COM_SPCUSTOMER_CUSTOMER_USERNAME_MESSAGE"
                       hint="COM_SPCUSTOMER_CUSTOMER_USERNAME_HINT" />
                <!-- Firstname Field. Type: Text. (joomla)-->
                <field type="text"
                       name="firstname"
                       label="COM_SPCUSTOMER_CUSTOMER_FIRSTNAME_LABEL"
                       size="40"
                       maxlength="150"
                       description="COM_SPCUSTOMER_CUSTOMER_FIRSTNAME_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="true"
                       filter="STRING"
                       message="COM_SPCUSTOMER_CUSTOMER_FIRSTNAME_MESSAGE"
                       hint="COM_SPCUSTOMER_CUSTOMER_FIRSTNAME_HINT" />
                <!-- Lastname Field. Type: Text. (joomla)-->
                <field type="text"
                       name="lastname"
                       label="COM_SPCUSTOMER_CUSTOMER_LASTNAME_LABEL"
                       size="40"
                       maxlength="150"
                       description="COM_SPCUSTOMER_CUSTOMER_LASTNAME_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_SPCUSTOMER_CUSTOMER_LASTNAME_MESSAGE"
                       hint="COM_SPCUSTOMER_CUSTOMER_LASTNAME_HINT" />
                <!-- Mobile_phone Field. Type: Text. (joomla)-->
                <field type="text"
                       name="mobile_phone"
                       label="COM_SPCUSTOMER_CUSTOMER_MOBILE_PHONE_LABEL"
                       size="10"
                       maxlength="50"
                       default=""
                       description="COM_SPCUSTOMER_CUSTOMER_MOBILE_PHONE_DESCRIPTION"
                       class="text_area"
                       required="true"
                       filter="STRING"
                       validated="tel"
                       message="COM_SPCUSTOMER_CUSTOMER_MOBILE_PHONE_MESSAGE"
                       hint="COM_SPCUSTOMER_CUSTOMER_MOBILE_PHONE_HINT" />
                <!-- Email Field. Type: Text. (joomla)-->
                <field type="text"
                       name="email"
                       label="COM_SPCUSTOMER_CUSTOMER_EMAIL_LABEL"
                       size="10"
                       maxlength="50"
                       description="COM_SPCUSTOMER_CUSTOMER_EMAIL_DESCRIPTION"
                       class="text_area"
                       required="true"
                       filter="STRING"
                       validate="email"
                       message="COM_SPCUSTOMER_CUSTOMER_EMAIL_MESSAGE"
                       hint="COM_SPCUSTOMER_CUSTOMER_EMAIL_HINT" />
                <!-- Dateofbirth Field. Type: Calendar. (joomla)-->
                <field type="calendar"
                       name="dateofbirth"
                       label="COM_SPCUSTOMER_CUSTOMER_DATEOFBIRTH_LABEL"
                       default="1970-01-01"
                       description="COM_SPCUSTOMER_CUSTOMER_DATEOFBIRTH_DESCRIPTION"
                       format="%Y-%m-%d"
                       filter="STRING"
                       required="true"
                       todaybutton="false"
                       minyear="-120"
                       maxyear="-1" />
                <!-- Sex Field. Type: Radio. (joomla)-->
                <field type="radio"
                       name="sex"
                       label="COM_SPCUSTOMER_CUSTOMER_SEX_LABEL"
                       class="btn-group btn-group-yesno"
                       default="0"
                       required="false">
                        <!-- Option Set.-->
                        <option value="1">COM_SPCUSTOMER_CUSTOMER_FEMALE</option>
                        <option value="0">COM_SPCUSTOMER_CUSTOMER_MALE</option>
                </field>
                <!-- Zipcode Field. Type: Text. (joomla)-->
                <field type="text"
                       name="zipcode"
                       label="COM_SPCUSTOMER_CUSTOMER_ZIPCODE_LABEL"
                       size="40"
                       maxlength="20"
                       description="COM_SPCUSTOMER_CUSTOMER_ZIPCODE_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_SPCUSTOMER_CUSTOMER_ZIPCODE_MESSAGE"
                       hint="COM_SPCUSTOMER_CUSTOMER_ZIPCODE_HINT" />
                <!-- Membership Field. Type: Radio. (joomla)-->
                <field type="radio"
                       name="membership"
                       label="COM_SPCUSTOMER_CUSTOMER_MEMBERSHIP_LABEL"
                       class="btn-group btn-group-yesno"
                       default="0"
                       required="false">
                        <!-- Option Set.-->
                        <option value="1">COM_SPCUSTOMER_CUSTOMER_YES</option>
                        <option value="0">COM_SPCUSTOMER_CUSTOMER_NO</option>
                </field>
                <!-- Communication Field. Type: Radio. (joomla)-->
                <field type="radio"
                       name="communication"
                       label="COM_SPCUSTOMER_CUSTOMER_COMMUNICATION_LABEL"
                       class="btn-group btn-group-yesno"
                       default="1"
                       required="false">
                        <!-- Option Set.-->
                        <option value="1">COM_SPCUSTOMER_CUSTOMER_YES</option>
                        <option value="0">COM_SPCUSTOMER_CUSTOMER_NO</option>
                </field>
                <!-- Alias Field. Type: Text. (joomla)-->
                <field type="text"
                       name="alias"
                       label="COM_SPCUSTOMER_CUSTOMER_ALIAS_LABEL"
                       description="JFIELD_ALIAS_DESC"
                       filter="STRING"
                       hint="COM_SPCUSTOMER_CUSTOMER_ALIAS_HINT" />
        </fieldset>
	
	<!-- Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this customer"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_spcustomer"
			section="customer"
		/>
	</fieldset>
</form>