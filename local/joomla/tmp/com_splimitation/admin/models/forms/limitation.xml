<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_splimitation/models/rules"
	addfieldpath="/administrator/components/com_splimitation/models/fields"
>
	<fieldset name="details">
                <!-- Default Fields.-->
                <!-- Id Field. Type: Text (joomla)-->
                <field name="id"
                       type="text"
                       class="readonly"
                       readonly="true"
                       label="JGLOBAL_FIELD_ID_LABEL"
                       description="JGLOBAL_FIELD_ID_DESC"
                       size="10"
                       default="0" />
                <!-- Date Created Field. Type: Calendar (joomla)-->
                <field name="created"
                       type="calendar"
                       label="COM_SPLIMITATION_LIMITATION_CREATED_DATE_LABEL"
                       description="COM_SPLIMITATION_LIMITATION_CREATED_DATE_DESC"
                       size="22"
                       format="%Y-%m-%d %H:%M:%S"
                       filter="user_utc" />
                <!-- User Created Field. Type: User (joomla)-->
                <field name="created_by"
                       type="user"
                       label="COM_SPLIMITATION_LIMITATION_CREATED_BY_LABEL"
                       description="COM_SPLIMITATION_LIMITATION_CREATED_BY_DESC" />
                <!-- Published Field. Type: List (joomla)-->
                <field name="published"
                       type="list"
                       label="JSTATUS">
                        <option value="1">JPUBLISHED</option>
                        <option value="0">JUNPUBLISHED</option>
                        <option value="2">JARCHIVED</option>
                        <option value="-2">JTRASHED</option>
                </field>
                <!-- Date Modified Field. Type: Calendar (joomla)-->
                <field name="modified"
                       type="calendar"
                       class="readonly"
                       label="COM_SPLIMITATION_LIMITATION_MODIFIED_DATE_LABEL"
                       description="COM_SPLIMITATION_LIMITATION_MODIFIED_DATE_DESC"
                       size="22"
                       readonly="true"
                       format="%Y-%m-%d %H:%M:%S"
                       filter="user_utc" />
                <!-- User Modified Field. Type: User (joomla)-->
                <field name="modified_by"
                       type="user"
                       label="COM_SPLIMITATION_LIMITATION_MODIFIED_BY_LABEL"
                       description="COM_SPLIMITATION_LIMITATION_MODIFIED_BY_DESC"
                       class="readonly"
                       readonly="true"
                       filter="unset" />
                <!-- Access Field. Type: Accesslevel (joomla)-->
                <field name="access"
                       type="accesslevel"
                       label="JFIELD_ACCESS_LABEL"
                       description="JFIELD_ACCESS_DESC"
                       default="1"
                       required="false" />
                <!-- Ordering Field. Type: Numbers (joomla)-->
                <field name="ordering"
                       type="number"
                       class="inputbox validate-ordering"
                       label="COM_SPLIMITATION_LIMITATION_ORDERING_LABEL"
                       description=""
                       default="0"
                       size="6"
                       required="false" />
                <!-- Version Field. Type: Text (joomla)-->
                <field name="version"
                       type="text"
                       class="readonly"
                       label="COM_SPLIMITATION_LIMITATION_VERSION_LABEL"
                       description="COM_SPLIMITATION_LIMITATION_VERSION_DESC"
                       size="6"
                       readonly="true"
                       filter="unset" />
                <!-- Metakey Field. Type: Textarea (joomla)-->
                <field name="metakey"
                       type="textarea"
                       label="JFIELD_META_KEYWORDS_LABEL"
                       description="JFIELD_META_KEYWORDS_DESC"
                       rows="3"
                       cols="30" />
                <!-- Metadesc Field. Type: Textarea (joomla)-->
                <field name="metadesc"
                       type="textarea"
                       label="JFIELD_META_DESCRIPTION_LABEL"
                       description="JFIELD_META_DESCRIPTION_DESC"
                       rows="3"
                       cols="30" />
                <!-- Dynamic Fields.-->
                <!-- Name Field. Type: Text. (joomla)-->
                <field type="text"
                       name="name"
                       label="COM_SPLIMITATION_LIMITATION_NAME_LABEL"
                       size="40"
                       maxlength="150"
                       description="COM_SPLIMITATION_LIMITATION_NAME_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="true"
                       filter="STRING"
                       message="COM_SPLIMITATION_LIMITATION_NAME_MESSAGE"
                       hint="COM_SPLIMITATION_LIMITATION_NAME_HINT" />
                <!-- Maxupload Field. Type: Text. (joomla)-->
                <field type="text"
                       name="maxupload"
                       label="COM_SPLIMITATION_LIMITATION_MAXUPLOAD_LABEL"
                       size="40"
                       maxlength="20"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_SPLIMITATION_LIMITATION_MAXUPLOAD_MESSAGE"
                       hint="COM_SPLIMITATION_LIMITATION_MAXUPLOAD_HINT" />
                <!-- Maxdownload Field. Type: Text. (joomla)-->
                <field type="text"
                       name="maxdownload"
                       label="COM_SPLIMITATION_LIMITATION_MAXDOWNLOAD_LABEL"
                       size="40"
                       maxlength="20"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_SPLIMITATION_LIMITATION_MAXDOWNLOAD_MESSAGE"
                       hint="COM_SPLIMITATION_LIMITATION_MAXDOWNLOAD_HINT" />
                <!-- Maxtraffic Field. Type: Text. (joomla)-->
                <field type="text"
                       name="maxtraffic"
                       label="COM_SPLIMITATION_LIMITATION_MAXTRAFFIC_LABEL"
                       size="40"
                       maxlength="20"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_SPLIMITATION_LIMITATION_MAXTRAFFIC_MESSAGE"
                       hint="COM_SPLIMITATION_LIMITATION_MAXTRAFFIC_HINT" />
                <!-- Urlredirect Field. Type: Url. (joomla)-->
                <field type="url"
                       name="urlredirect"
                       label="COM_SPLIMITATION_LIMITATION_URLREDIRECT_LABEL"
                       size="60"
                       maxlength="150"
                       description="COM_SPLIMITATION_LIMITATION_URLREDIRECT_DESCRIPTION"
                       class="text_area"
                       filter="url"
                       validated="url"
                       scheme="http,https"
                       message="COM_SPLIMITATION_LIMITATION_URLREDIRECT_MESSAGE"
                       hint="COM_SPLIMITATION_LIMITATION_URLREDIRECT_HINT" />
                <!-- Accessperiod Field. Type: Text. (joomla)-->
                <field type="text"
                       name="accessperiod"
                       label="COM_SPLIMITATION_LIMITATION_ACCESSPERIOD_LABEL"
                       size="40"
                       maxlength="20"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_SPLIMITATION_LIMITATION_ACCESSPERIOD_MESSAGE"
                       hint="COM_SPLIMITATION_LIMITATION_ACCESSPERIOD_HINT" />
                <!-- Dailysession Field. Type: Text. (joomla)-->
                <field type="text"
                       name="dailysession"
                       label="COM_SPLIMITATION_LIMITATION_DAILYSESSION_LABEL"
                       size="40"
                       maxlength="20"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_SPLIMITATION_LIMITATION_DAILYSESSION_MESSAGE"
                       hint="COM_SPLIMITATION_LIMITATION_DAILYSESSION_HINT" />
                <!-- Metadata Fields-->
                <fields name="metadata"
                        label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
                        <fieldset name="vdmmetadata"
                                  label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
                                <!-- Robots Field. Type: List (joomla)-->
                                <field name="robots"
                                       type="list"
                                       label="JFIELD_METADATA_ROBOTS_LABEL"
                                       description="JFIELD_METADATA_ROBOTS_DESC">
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                        <option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
                                        <option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
                                        <option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
                                        <option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
                                </field>
                                <!-- Author Field. Type: Text (joomla)-->
                                <field name="author"
                                       type="text"
                                       label="JAUTHOR"
                                       description="JFIELD_METADATA_AUTHOR_DESC"
                                       size="20" />
                                <!-- Rights Field. Type: Textarea (joomla)-->
                                <field name="rights"
                                       type="textarea"
                                       label="JFIELD_META_RIGHTS_LABEL"
                                       description="JFIELD_META_RIGHTS_DESC"
                                       required="false"
                                       filter="string"
                                       cols="30"
                                       rows="2" />
                        </fieldset>
                </fields>
        </fieldset>
	
	<!-- Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this limitation"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_splimitation"
			section="limitation"
		/>
	</fieldset>
</form>