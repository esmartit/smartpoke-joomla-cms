<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_spspot/models/rules"
	addfieldpath="/administrator/components/com_spspot/models/fields"
>
	<fieldset name="details">
                <!-- Default Fields.-->
                <!-- Id Field. Type: Text (joomla)-->
                <field name="id"
                       type="text"
                       class="readonly"
                       readonly="true"
                       label="JGLOBAL_FIELD_ID_LABEL"
                       description="JGLOBAL_FIELD_ID_DESC"
                       size="10"
                       default="0" />
                <!-- Date Created Field. Type: Calendar (joomla)-->
                <field name="created"
                       type="calendar"
                       label="COM_SPSPOT_SPOT_CREATED_DATE_LABEL"
                       description="COM_SPSPOT_SPOT_CREATED_DATE_DESC"
                       size="22"
                       format="%Y-%m-%d %H:%M:%S"
                       filter="user_utc" />
                <!-- User Created Field. Type: User (joomla)-->
                <field name="created_by"
                       type="user"
                       label="COM_SPSPOT_SPOT_CREATED_BY_LABEL"
                       description="COM_SPSPOT_SPOT_CREATED_BY_DESC" />
                <!-- Published Field. Type: List (joomla)-->
                <field name="published"
                       type="list"
                       label="JSTATUS">
                        <option value="1">JPUBLISHED</option>
                        <option value="0">JUNPUBLISHED</option>
                        <option value="2">JARCHIVED</option>
                        <option value="-2">JTRASHED</option>
                </field>
                <!-- Date Modified Field. Type: Calendar (joomla)-->
                <field name="modified"
                       type="calendar"
                       class="readonly"
                       label="COM_SPSPOT_SPOT_MODIFIED_DATE_LABEL"
                       description="COM_SPSPOT_SPOT_MODIFIED_DATE_DESC"
                       size="22"
                       readonly="true"
                       format="%Y-%m-%d %H:%M:%S"
                       filter="user_utc" />
                <!-- User Modified Field. Type: User (joomla)-->
                <field name="modified_by"
                       type="user"
                       label="COM_SPSPOT_SPOT_MODIFIED_BY_LABEL"
                       description="COM_SPSPOT_SPOT_MODIFIED_BY_DESC"
                       class="readonly"
                       readonly="true"
                       filter="unset" />
                <!-- Access Field. Type: Accesslevel (joomla)-->
                <field name="access"
                       type="accesslevel"
                       label="JFIELD_ACCESS_LABEL"
                       description="JFIELD_ACCESS_DESC"
                       default="1"
                       required="false" />
                <!-- Ordering Field. Type: Numbers (joomla)-->
                <field name="ordering"
                       type="number"
                       class="inputbox validate-ordering"
                       label="COM_SPSPOT_SPOT_ORDERING_LABEL"
                       description=""
                       default="0"
                       size="6"
                       required="false" />
                <!-- Version Field. Type: Text (joomla)-->
                <field name="version"
                       type="text"
                       class="readonly"
                       label="COM_SPSPOT_SPOT_VERSION_LABEL"
                       description="COM_SPSPOT_SPOT_VERSION_DESC"
                       size="6"
                       readonly="true"
                       filter="unset" />
                <!-- Metakey Field. Type: Textarea (joomla)-->
                <field name="metakey"
                       type="textarea"
                       label="JFIELD_META_KEYWORDS_LABEL"
                       description="JFIELD_META_KEYWORDS_DESC"
                       rows="3"
                       cols="30" />
                <!-- Metadesc Field. Type: Textarea (joomla)-->
                <field name="metadesc"
                       type="textarea"
                       label="JFIELD_META_DESCRIPTION_LABEL"
                       description="JFIELD_META_DESCRIPTION_DESC"
                       rows="3"
                       cols="30" />
                <!-- Dynamic Fields.-->
                <!-- Spot_id Field. Type: Text. (joomla)-->
                <field type="text"
                       name="spot_id"
                       label="COM_SPSPOT_SPOT_SPOT_ID_LABEL"
                       size="40"
                       maxlength="50"
                       description="COM_SPSPOT_SPOT_SPOT_ID_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="true"
                       filter="STRING"
                       message="COM_SPSPOT_SPOT_SPOT_ID_MESSAGE"
                       hint="COM_SPSPOT_SPOT_SPOT_ID_HINT" />
                <!-- Name Field. Type: Text. (joomla)-->
                <field type="text"
                       name="name"
                       label="COM_SPSPOT_SPOT_NAME_LABEL"
                       size="40"
                       maxlength="150"
                       description="COM_SPSPOT_SPOT_NAME_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="true"
                       filter="STRING"
                       message="COM_SPSPOT_SPOT_NAME_MESSAGE"
                       hint="COM_SPSPOT_SPOT_NAME_HINT" />
                <!-- Business Field. Type: Sql. (joomla)-->
                <field type="sql"
                       name="business"
                       label="COM_SPSPOT_SPOT_BUSINESS_LABEL"
                       query="SELECT id, name AS business FROM #__spbusiness_businesstype WHERE published = 1"
                       default=""
                       description="COM_SPSPOT_SPOT_BUSINESS_DESCRIPTION"
                       key_field="id"
                       value_field="business"
                       translate="true" />
                <!-- Latitude Field. Type: Text. (joomla)-->
                <field type="text"
                       name="latitude"
                       label="COM_SPSPOT_SPOT_LATITUDE_LABEL"
                       size="40"
                       maxlength="20"
                       description="COM_SPSPOT_SPOT_LATITUDE_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_SPSPOT_SPOT_LATITUDE_MESSAGE"
                       hint="COM_SPSPOT_SPOT_LATITUDE_HINT" />
                <!-- Longitude Field. Type: Text. (joomla)-->
                <field type="text"
                       name="longitude"
                       label="COM_SPSPOT_SPOT_LONGITUDE_LABEL"
                       size="40"
                       maxlength="20"
                       description="COM_SPSPOT_SPOT_LONGITUDE_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_SPSPOT_SPOT_LONGITUDE_MESSAGE"
                       hint="COM_SPSPOT_SPOT_LONGITUDE_HINT" />
                <!-- City Field. Type: Text. (joomla)-->
                <field type="text"
                       name="city"
                       label="COM_SPSPOT_SPOT_CITY_LABEL"
                       size="40"
                       maxlength="150"
                       default=""
                       description="COM_SPSPOT_SPOT_CITY_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       filter="STRING"
                       message="COM_SPSPOT_SPOT_CITY_MESSAGE"
                       hint="COM_SPSPOT_SPOT_CITY_HINT" />
                <!-- Country Field. Type: Text. (joomla)-->
                <field type="text"
                       name="country"
                       label="COM_SPSPOT_SPOT_COUNTRY_LABEL"
                       size="40"
                       maxlength="150"
                       default=""
                       description="COM_SPSPOT_SPOT_COUNTRY_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       filter="STRING"
                       message="COM_SPSPOT_SPOT_COUNTRY_MESSAGE"
                       hint="COM_SPSPOT_SPOT_COUNTRY_HINT" />
                <!-- State Field. Type: Text. (joomla)-->
                <field type="text"
                       name="state"
                       label="COM_SPSPOT_SPOT_STATE_LABEL"
                       size="40"
                       maxlength="150"
                       default=""
                       description="COM_SPSPOT_SPOT_STATE_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       filter="STRING"
                       message="COM_SPSPOT_SPOT_STATE_MESSAGE"
                       hint="COM_SPSPOT_SPOT_STATE_HINT" />
                <!-- Alias Field. Type: Text. (joomla)-->
                <field type="text"
                       name="alias"
                       label="COM_SPSPOT_SPOT_ALIAS_LABEL"
                       description="JFIELD_ALIAS_DESC"
                       filter="STRING"
                       hint="COM_SPSPOT_SPOT_ALIAS_HINT" />
                <!-- Metadata Fields-->
                <fields name="metadata"
                        label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
                        <fieldset name="vdmmetadata"
                                  label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
                                <!-- Robots Field. Type: List (joomla)-->
                                <field name="robots"
                                       type="list"
                                       label="JFIELD_METADATA_ROBOTS_LABEL"
                                       description="JFIELD_METADATA_ROBOTS_DESC">
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                        <option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
                                        <option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
                                        <option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
                                        <option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
                                </field>
                                <!-- Author Field. Type: Text (joomla)-->
                                <field name="author"
                                       type="text"
                                       label="JAUTHOR"
                                       description="JFIELD_METADATA_AUTHOR_DESC"
                                       size="20" />
                                <!-- Rights Field. Type: Textarea (joomla)-->
                                <field name="rights"
                                       type="textarea"
                                       label="JFIELD_META_RIGHTS_LABEL"
                                       description="JFIELD_META_RIGHTS_DESC"
                                       required="false"
                                       filter="string"
                                       cols="30"
                                       rows="2" />
                        </fieldset>
                </fields>
        </fieldset>
	
	<!-- Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this spot"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_spspot"
			section="spot"
		/>
	</fieldset>
</form>