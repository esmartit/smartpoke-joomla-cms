<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_spvalue/models/rules"
	addfieldpath="/administrator/components/com_spvalue/models/fields"
>
	<fieldset name="details">
        <!-- Default Fields.-->
        <!-- Id Field. Type: Text (joomla)-->
        <field name="id"
               type="hidden"
               class="readonly"
               readonly="true"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               size="10"
               default="0" />
        <!-- Published Field. Type: List (joomla)-->
        <field name="published"
               type="hidden"
               class="readonly form-control"
               readonly="true"
               default="1"
               label="JSTATUS">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <!-- Dynamic Fields.-->
        <!-- Name Field. Type: Text. (joomla)-->
        <field type="text"
               name="name"
               label="COM_SPVALUE_VALUE_NAME_LABEL"
               size="40"
               maxlength="150"
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="true"
               filter="STRING"
               message="COM_SPVALUE_VALUE_NAME_MESSAGE"
               hint="COM_SPVALUE_VALUE_NAME_HINT" />
        <!-- Code_value Field. Type: Text. (joomla)-->
        <field type="text"
               name="code_value"
               label="COM_SPVALUE_VALUE_CODE_VALUE_LABEL"
               size="40"
               maxlength="150"
               default=""
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="false"
               filter="STRING"
               message="COM_SPVALUE_VALUE_CODE_VALUE_MESSAGE"
               hint="COM_SPVALUE_VALUE_CODE_VALUE_HINT"
               autocomplete="on" />
        <!-- Value Field. Type: Text. (joomla)-->
        <field type="text"
               name="value"
               label="COM_SPVALUE_VALUE_VALUE_LABEL"
               size="40"
               maxlength="150"
               default=""
               class="text_area form-control"
               readonly="false"
               disabled="false"
               required="false"
               filter="STRING"
               message="COM_SPVALUE_VALUE_VALUE_MESSAGE"
               hint="COM_SPVALUE_VALUE_VALUE_HINT"
               autocomplete="on" />
        <!-- Alias Field. Type: Text. (joomla)-->
        <field type="hidden"
               name="alias"
               label="COM_SPVALUE_VALUE_ALIAS_LABEL"
               description="JFIELD_ALIAS_DESC"
               filter="STRING"
               hint="COM_SPVALUE_VALUE_ALIAS_HINT" />
        </fieldset>
</form>